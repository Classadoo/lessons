{
    "name": "Lesson Tester",
    "version": "1",
    "manifest_version": 2,
    "description": "Extension to save website snapshots to test classadoo lessons with.",
    "browser_action": {
        "default_icon": "new-id.png"
    },
    "icons": { "16": "new-id.png",
               "48": "new-id.png",
              "128": "new-id.png"
    },
    "update_url": "http://webtrails.co/chrome_extension_update.xml",
    "background": {
        "scripts": [
            "third_party_js/jquery.js", "third_party_js/firebase.min.js", "js/background/ClassManager.js",
             "js/background/UrlResolver.js", "js/background/Requests.js",
            "js/background/main.js", "third_party_js/URI.js",
            "js/Util.js"
        ]
    },
    "content_scripts": [       
        {
            "matches": ["<all_urls>"],            
            "js": ["third_party_js/jquery.js", "third_party_js/typeahead.min.js", "js/IframeManager.js", "js/HtmlProcessor.js", 
            "js/Util.js", "js/DefaultCss.js", "js/SyncedState.js", "js/Toolbar.js", "js/SyncManager.js", "js/State.js", 
            "js/ScratchpadSyncManager.js", "js/BindingUtils.js", "js/main.js"],
            "run_at": "document_start"
        }        
    ],
    "web_accessible_resources": [
        "css/*"
    ],
    "permissions": [
        "*://*/*", "tabs"
    ],    
    "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}